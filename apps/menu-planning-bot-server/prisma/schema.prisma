datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  category     EnumRecipeCategory?
  createdAt    DateTime            @default(now())
  id           String              @id @default(cuid())
  ingredients  Json?
  instructions String?
  name         String?
  updatedAt    DateTime            @updatedAt
}

model WeeklyMenu {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  menu      Json?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  weekStart DateTime?
}

model User {
  createdAt   DateTime     @default(now())
  email       String?      @unique
  firstName   String?
  id          String       @id @default(cuid())
  lastName    String?
  password    String
  preferences Json?
  roles       Json
  updatedAt   DateTime     @updatedAt
  username    String       @unique
  weeklyMenus WeeklyMenu[]
}

enum EnumRecipeCategory {
  Option1
}
